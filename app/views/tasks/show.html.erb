<h1>タスクの詳細</h1>

<nav class="navigation"><%= link_to '一覧', tasks_path %></nav>

<table>
    <tbody>
        <tr>
            <th><%= Task.human_attribute_name(:id) %></th>
            <td><%= @task.id %></td>
        </tr>
        <tr>
            <th><%= Task.human_attribute_name(:name) %></th>
            <td><%= @task.name %></td>
        </tr>
        <tr>
            <th><%= Task.human_attribute_name(:description) %></th>
            <% #simple_format→sanitize：デフォで<p>タグで囲い、危険なHTMLタグを取り除く。 %>
            <% #今回はsanitizeをfalseにし、hメソッドで<などを&lt;に変換 %>
            <% #wrapper_tagで、pタグではなくdivタグで囲うように変更 %>
            <td><%= simple_format(h(@task.description), {}, sanitize: false, wrapper_tag: "div") %></td>
        </tr>
        <tr>
            <th><%= Task.human_attribute_name(:created_at) %></th>
            <td><%= @task.created_at %></td>
        </tr>
        <tr>
            <th><%= Task.human_attribute_name(:updated_at) %></th>
            <td><%= @task.updated_at %></td>
        </tr>
    </tbody>
</table>
<%= link_to '編集', edit_task_path, class: 'btn btn-primary' %>
<%= link_to '削除', @task, method: :delete, data: {confirm: "タスク「#{@task.name}」を削除します。よろしいですか？"}, class: 'btn btn-danger' %>
