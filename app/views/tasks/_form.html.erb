<%= form_with model: task, class: 'form', local: true do |f| %>
    <div class="form-row">
        <%= f.label :name, class: 'form-row_label' %>
        <%= f.text_field :name, class: 'form-row_content', id: 'task_name' %>
    </div>
    <div class="form-row">
        <%= f.label :description, class: 'form-row_label'%>
        <%= f.text_area :description, rows: 5, class: 'form-row_content', id: 'task_description' %>
    </div>
    <div class="form-row">
        <%= f.submit nil, class: 'btn btn-primary' %>
    </div>
<% end %>